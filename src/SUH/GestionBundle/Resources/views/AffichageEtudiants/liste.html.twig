<div id="liste" class="row">
    <ul class="col-md-12">
        {% for etudiant in listeEtudiantsHandicapes %}
            
            {% if loop.index is even %}
                <li class="pair">
                    <a href="{{ path('suh_get_etudiant', {'id': etudiant['id']})}}">{{etudiant['nom']}} {{etudiant['prenom']}}</a>
                </li>
            {% else %}
                <li class="impair">
                    <a href="{{ path('suh_get_etudiant', {'id': etudiant['id']})}}">{{etudiant['nom']}} {{etudiant['prenom']}}</a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>
{% set userIndex = '' %}

{% for etudiant in listeEtudiantsHandicapes %}
    {% if etudiant['mailInstitutionnel'] is not null %}
        {% set userIndex = userIndex ~ etudiant['mailInstitutionnel'] ~ ';' %}
    {% endif %}
    {% if etudiant['mailPerso'] is not null %}
        {% set userIndex = userIndex ~ etudiant['mailPerso'] ~ ';' %}
    {% endif %}
{% endfor %}

<div id="nbResultats" class="row">
    <a href="mailto:{{ userIndex }}" style="text-decoration: none; display:inline-block;" class="fa fa-envelope-o"></a>
    <p style="margin-left:10px; display:inline-block;" class="help-block"> Nombre de r√©sultats : 
        <span class="badge" >{{listeEtudiantsHandicapes|length}}</span></p>
</div>