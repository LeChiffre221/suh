{% extends "SUHContratBundle:AffichageContrats:base.html.twig" %}

{% block title %} {{parent()}} - Accueil {% endblock %}

{% block body %}
        <div class="container ">
            <div class="col-lg-5 col-lg-push-2" >
                <h2 style="text-align: center">Heures validées </h2>
                {% if listeHeureValide == null %}
                    <h3 style="color: red">Aucune heure validée</h3>
                {% else %}
                    {% for heureValide in listeHeureValide %}
                        <div class="bloc-heure panel panel-danger">
                            <div class="panel-heading">
                                <h3 class="panel-title roboto"> Le : {{ heureValide.dateAndTime | striptags | slice(0, 10) }} à {{ heureValide.dateAndTime | striptags | slice(11, 15) }}</h3>
                            </div>
                            <div class="panel-body">
                                <h4> Nature de la mission : {{ heureValide.natureMission }} </h4>
                                <h4> Description de la mission : {{ heureValide.descriptionMission }} </h4>
                                <h4> Nombre d'heures effectuées: {{ heureValide.nbHeure }} </h4>
                            </div>
                        </div>

                    {% endfor %}
                {% endif %}

            </div>

        </div>

{% endblock %}
