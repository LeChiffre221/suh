{% extends "SUHContratBundle:AffichageContrats:accueil.html.twig" %}

{% block titleright %}
    <p class="">Import-Export</p>
{% endblock %}

{% block bodyright %}
    <div class="col-md-12 container-contrat">


        <div class="bloc-contrat panel panel-primary">
            <div class="col-md-12 container-contrat">
                <!-- Flashbags d'events -->
                {% for message in app.session.flashbag.get('notice') %}
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <strong>Erreur ! </strong>{{ message }}

                    </div>

                {% endfor %}
                <!-- -- -->

                <h2>Importer des étudiants aidants depuis un classeur Excel</h2>
                <br>

                <form method="POST" action="{{path('suh_contrat_importationExcel')}}" enctype="multipart/form-data">
                    <div class="form-group" style="align-items: center">

                    <input class="col-md-4 col-lg-push-4 " type="file" name="fichierExcel" required="required"/><br/>
                    </div>

                    <div class="form-group">
                        <button  type="submit" class=" col-md-2 col-lg-push-5  btn btn-warning">Importer</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="bloc-contrat panel panel-primary">
            <div class="col-md-12 container-contrat">

                <h2>Exporter des étudiants aidants vers un classeur Excel</h2>

                <br>

                <form method="POST" action="" enctype="multipart/form-data">


                    <div class="form-group">
                        <button  type="submit" class=" col-md-2 col-lg-push-5  btn btn-warning">Exporter</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <br/><br/>
    </body>

{% endblock %}