{% extends "SUHConnexionBundle:Connexion:base.html.twig" %}

{% block head %} {{parent()}}
<link rel="stylesheet" href="{{asset('bundles/suhContrat/css/contrat.css')}}" type="text/css"/>
{% endblock %}
{% block title %} {{parent()}} - Inscription étudiant aidant{% endblock %}

{% block body %}
    <body>
        <form id="formulaire" class="content">
        <!-- Première étape : -->
            <h3>Identité de l'étudiant aidant</h3>
            <section>
                <div class="col-md-12">
                    <div class="col-md-3 form-group form-template input-group input-group-lg">
                        <label for="nom">Nom :</label><br>
                        <input id="nom" type="text" class="form-control"" placeholder="Nom" pattern="^([a-zA-Z'()àâéèêôùûçÀÂÉÈÔÙÛÇ\s-]{1,30})$" title="Veuillez saisir un nom valide." required>
                    </div>
                
                    <div class="col-md-3 form-group form-template input-group input-group-lg" >
                        <label for="prenom">Prénom :</label><br>
                        <input id="prenom" type="text" name="prenom" class="form-control" placeholder="Prénom" pattern="^([a-zA-Z'()àâéèêôùûçÀÂÉÈÔÙÛÇ\s-]{1,30})$" title="Veuillez saisir un prénom valide" required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6 form-group form-template input-group input-group-lg" >
                        <label for="dateNaissance">Date de naissance :</label><br>
                        <input id="dateNaissance" name="dateNaissance" class="form-control " value="{% if(info) %}{{info.dateNaissance|date("d/m/Y")}}{% endif %}" pattern="^[0-9]{2}[/]{1}[0-9]{2}[/]{1}[0-9]{4}$" title="Veuillez saisir une date de naissance valide au format JJ/MM/AAAA." placeholder="JJ/MM/AAAA">
                    </div>
                    <div class="col-md-6 form-group form-template input-group input-group-lg" >
                        <label for="dateNaissance">Certificat Médical :</label><br>
                        <input type="radio" name="certificat" value="true"><br>
                </div>
            </section>
            <h3>Informations de l'étudiant</h3>
            <section>
                <div class="col-md-12">
                <div class="col-md-4">
                    <div class="col-md-12 form-group form-template" >
                        
                        <label for="mailInstitutionnel">Email institutionnel :</label><br>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon glyphicon glyphicon-envelope"></span> 
                            <input id="mailInstitutionnel" type="email" class="form-control" placeholder="Email Institutionnel" value="{% if (info) %}{{info.listEtudiantInformations[0].etudiantInformations.mailInstitutionnel}}{% endif %}" title="Veuillez fournir une adresse électronique valide.">
                        </div>
                    </div>
               
                    <div class="col-md-12 form-group form-template" >
                        <label for="mailPerso">Email Personnel :</label><br>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon glyphicon glyphicon-envelope"></span> 
                            <input id="mailPerso" name="email1" type="email" class="form-control" placeholder="Email Personnel" value="{% if (info) %}{{info.listEtudiantInformations[0].etudiantInformations.mailPerso}}{% endif %}" title="Veuillez fournir une adresse électronique valide.">
                        </div>
                    </div>
                
                    <div class="col-md-12 form-group form-template" >
                        <label for="mailParents">Email Parents :</label><br>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon glyphicon glyphicon-envelope"></span> 
                            <input id="mailParents" name="email2" type="email" class="form-control" placeholder="Email Parents" value="{% if (info) %}{{info.listEtudiantInformations[0].etudiantInformations.mailParents}}{% endif %}" title="Veuillez fournir une adresse électronique valide.">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-md-12 form-group form-template" >
                        <label for="adresseEtudiante">Adresse étudiante :</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon glyphicon glyphicon-home"></span> 
                            <input id="adresseEtudiante" class="form-control" placeholder="Adresse Etudiante" type="text" value="{% if (info) %}{{info.listEtudiantInformations[0].etudiantInformations.adresseEtudiante}}{% endif %}">
                            </div>
                    </div>
                
                    <div class="col-md-12 form-group form-template" >
                        <label for="adresseFamiliale">Adresse familiale :</label><br>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon glyphicon glyphicon-home"></span> 
                            <input id="adresseFamiliale" class="form-control" placeholder="Adresse Familiale" type="text" value="{% if (info) %}{{info.listEtudiantInformations[0].etudiantInformations.adresseFamiliale}}{% endif %}">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-md-12 form-group form-template" >
                        <label for="telephonePerso">Téléphone Personnel :</label><br>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon glyphicon glyphicon-phone"></span> 
                            <input id="telephonePerso" name="telephonePerso" class="form-control" placeholder="Telephone personnel" type="tel" pattern="^(0|\+33)[1-9]([-. ]?[0-9]{2}){4}$" value="{% if (info) %}{{info.listEtudiantInformations[0].etudiantInformations.telephonePerso}}{% endif %}" title="Veuillez entrer un numéro de téléphone valide.">
                        </div>
                    </div>
                
                    <div class="col-md-12 form-group form-template" >
                        <label for="telephoneParents">Téléphone Parents :</label><br>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon glyphicon glyphicon-phone-alt"></span> 
                            <input id="telephoneParents" class="form-control" placeholder="Telephone parents" type="tel" name="telephone" pattern="^(0|\+33)[1-9]([-. ]?[0-9]{2}){4}$" value="{% if (info) %}{{info.listEtudiantInformations[0].etudiantInformations.telephoneParents}}{% endif %}" title="Veuillez entre un numéro de téléphone valide">
                        </div>
                    </div>
                </div>
                </div>
            </section>
            <h3>Formation de l'étudiant</h3>
            <section>
                <div class="col-md-12 ">
                    <div class="col-md-4 form-group form-template" >
                        <div class="col-md-12 ">
                            <label for="telephonePerso">Diplôme :</label><br>
                            <select id="select1" class="form-control">
                                <option value="Licence">Licence</option>
                                <option value="DUT">DUT</option>
                                <option value="Licence Pro">Licence pro</option>
                                <option value="Master">Master</option>
                                <option value="Doctorat">Doctorat</option>
                                <option value="Concours">Concours</option>
                                <option value="DAUE">DAEU</option>
                                <option value="Autre">Autre</option>
                            </select>
                        </div>
                        <div class="col-md-12 form-group" id="autreInput">
                            <label for="">Autre :</label><br>
                            <div class="input-group input-group-lg">
                                <input  name="" class="form-control" placeholder="Autre" >
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 form-group form-template" >
                        <div class="col-md-12 ">
                            <label for="telephonePerso">Etablissement :</label><br>
                            <select id="select2" class="form-control">
                                <option>UBP</option>
                                <option>UDA</option>
                                <option>UCA</option>
                                <option>Sigma</option>
                                <option>Vetagrosup</option>
                                <option>Ensacf</option>
                                <option value="Autre">Autre</option>
                            </select>
                        </div>
                        <div class="col-md-12 " id="autreInput2">
                            <label for="">Autre :</label><br>
                            <div class="input-group input-group-lg">
                                <input  name="" class="form-control" placeholder="Autre" >
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 form-group form-template">
                        <label for="telephonePerso">Composante :</label><br>
                        <div class="input-group input-group-lg">
                            <input>
                        </div>
                    </div>
                    
                </div>
            </section>
        <br>
        <input type="submit">
        </form>
        <div style="background-color:red">
            {{ form(form) }}
        </div>
    </body>
    <script type="text/javascript">

        $(function() {
            
            $("#autreInput").hide();
            $("#autreInput2").hide();
        $( "#select1" ).change(function() {
            if($( "#select1 option:selected").val() == 'Autre'){
                $("#autreInput").slideDown();
            } else {
                $("#autreInput").slideUp();
            }
        });

        $( "#select2" ).change(function() {
            if($( "#select2 option:selected").val() == 'Autre'){
                $("#autreInput2").slideDown();
            } else {
                $("#autreInput2").slideUp();
            }
        });

        $.datepicker.regional['fr'] = {clearText: 'Effacer', clearStatus: '',
                closeText: 'Fermer', closeStatus: 'Fermer sans modifier',
                prevText: '<Préc', prevStatus: 'Voir le mois précédent',
                nextText: 'Suiv>', nextStatus: 'Voir le mois suivant',
                currentText: 'Courant', currentStatus: 'Voir le mois courant',
                monthNames: ['Janvier','Février','Mars','Avril','Mai','Juin',
                'Juillet','Août','Septembre','Octobre','Novembre','Décembre'],
                monthNamesShort: ['Jan','Fév','Mar','Avr','Mai','Jun',
                'Jul','Aoû','Sep','Oct','Nov','Déc'],
                monthStatus: 'Voir un autre mois', yearStatus: 'Voir un autre année',
                weekHeader: 'Sm', weekStatus: '',
                dayNames: ['Dimanche','Lundi','Mardi','Mercredi','Jeudi','Vendredi','Samedi'],
                dayNamesShort: ['Dim','Lun','Mar','Mer','Jeu','Ven','Sam'],
                dayNamesMin: ['Di','Lu','Ma','Me','Je','Ve','Sa'],
                dayStatus: 'Utiliser DD comme premier jour de la semaine', dateStatus: 'Choisir le DD, MM d',
                dateFormat: 'dd/mm/yy', firstDay: 0, 
                initStatus: 'Choisir la date', isRTL: false};
             $.datepicker.setDefaults($.datepicker.regional['fr']);


            $( "#dateNaissance" ).datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: "1900:2015",
                defaultDate: "-20y",
                dateFormat: "dd/mm/yy"
            });

        });
    </script>
{% endblock %}