{% extends "SUHContratBundle:AffichageContrats:base.html.twig" %}

{% block title %} {{parent()}} - Accueil {% endblock %}

{% block body %}
    <body>
        <div class="container">
            <h1 style="color: white">Hello {{ app.user.username }}</h1>
            <div class="col-md-12 container-contrat">
                <div class="bloc-contrat panel panel-primary">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    {# Les erreurs générales du formulaire. #}
                    {{ form_errors(form) }}

                    {# Idem pour un autre champ. #}
                    <div class="form-group">
                        {{ form_label(form.contrat, "Contrat : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.contrat) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.contrat, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    {# Idem pour un autre champ. #}
                    <div class="form-group">
                        {{ form_label(form.natureMission, "Nature de la mission : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.natureMission) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.natureMission, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.descriptionMission, "Description (facultatif) : ", {'label_attr': {'class': 'col-sm-3 control-label '}}) }}
                        {{ form_errors(form.descriptionMission) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.descriptionMission, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.dateAndTime, "Date et heure : ", {'label_attr': {'class': 'col-sm-3 control-label '}}) }}
                        {{ form_errors(form.dateAndTime) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.dateAndTime, {'attr': {'class': 'form-control date'}}) }}
                        </div>
                    </div>


                    <div class="form-group">
                        {{ form_label(form.nbHeure, "Nombre d'heures : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.nbHeure) }}
                        <div class="col-sm-1">
                            {{ form_widget(form.nbHeure, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>


                    <button type="submit" class="btn btn-success col-sm-offset-3">Ajouter les heures</button>
                    <br>


                    {# Génération automatique des champs pas encore écrits.
                       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                       et tous les champs cachés (type « hidden »). #}
                    {{ form_rest(form) }}

                    {# Fermeture de la balise <form> du formulaire HTML #}
                    {{ form_end(form) }}

                </div>
            </div>
            {{ form(form) }}
        </div>

    </body>
<script type="text/javascript">
    $(function() {


        $('.date').datetimepicker({
            format: 'DD/MM/YYYY HH:mm',
            defaultDate: new Date(),

        });

    });
</script>
{% endblock %}
